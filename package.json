{
  "name": "@mesosphere/mockserver",
  "version": "0.0.0-dev+semantically-released",
  "description": "A mockserver that allows you to mock XHR, long-polling XHR, server sent events and websocket connections",
  "main": "dist/server.js",
  "bin": "dist/cli.js",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts",
    "commit": "git-cz",
    "commitlint": "commitlint -e",
    "format": "prettier --write '.{/**,}/*.{md,js,ts}' 'package.json'",
    "lint-commit": "commitlint -e $GIT_PARAMS",
    "setup:git-hooks": "./scripts/pre-install",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "pretest": "npm run build",
    "test": "jest",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "prewatch": "npm run build",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mesosphere/mockserver.git"
  },
  "keywords": [
    "mock",
    "mockserver",
    "testing"
  ],
  "author": "DanielMSchmidt <dschmidt@mesosphere.com>",
  "license": "MIT",
  "homepage": "https://github.com/mesosphere/mockserver#readme",
  "bugs": {
    "url": "https://github.com/mesosphere/mockserver/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist"],
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "testResultsProcessor": "jest-junit",
    "projects": [
      {
        "displayName": "Jest",
        "transform": {
          "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "/__tests__/.*-test.ts$",
        "moduleFileExtensions": [
          "ts",
          "js",
          "json"
        ],
        "testPathIgnorePatterns": [
          "/node_modules/",
          "/helpers/"
        ]
      },
      {
        "displayName": "Prettier",
        "runner": "jest-runner-prettier",
        "moduleFileExtensions": [
          "js",
          "ts",
          "md",
          "json"
        ],
        "testMatch": [
          "<rootDir>/src/**/*.js",
          "<rootDir>/src/*.ts",
          "<rootDir>/src/**/*.ts",
          "**/*.md"
        ]
      },
      {
        "displayName": "TsLint",
        "runner": "jest-runner-tslint",
        "moduleFileExtensions": [
          "ts"
        ],
        "testMatch": [
          "**/*.ts"
        ],
        "testPathIgnorePatterns": [
          "/node_modules/",
          "/src/@types/"
        ]
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "post-commit": "npm run lint-commit"
    }
  },
  "dependencies": {
    "@types/cookie-parser": "1.4.1",
    "@types/glob": "5.0.35",
    "cookie-parser": "1.4.3",
    "express": "4.16.3",
    "glob": "7.1.2",
    "http-proxy": "1.17.0",
    "node": "10.0.0",
    "npm": "6.0.0",
    "npmlog": "4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "@dcos/tslint-config": "0.0.3",
    "@types/eventsource": "1.0.1",
    "@types/express": "4.11.1",
    "@types/jest": "22.2.3",
    "@types/node": "10.1.4",
    "@types/ws": "5.1.0",
    "babel-jest": "23.0.1",
    "babel-preset-env": "1.7.0",
    "commitizen": "2.9.6",
    "concurrently": "3.5.1",
    "cz-conventional-changelog": "2.1.0",
    "eventsource": "1.0.5",
    "husky": "1.0.0-rc.2",
    "jest": "23.0.1",
    "jest-junit": "3.7.0",
    "jest-runner-prettier": "0.2.3",
    "jest-runner-tslint": "1.0.4",
    "node-fetch": "2.1.2",
    "nodemon": "1.17.5",
    "prettier": "1.12.1",
    "semantic-release": "15.13.12",
    "ts-jest": "22.4.4",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.12.0",
    "tslint-eslint-rules": "5.1.0",
    "tslint-plugin-prettier": "1.3.0",
    "tslint-react": "3.5.1",
    "typescript": "2.8.3",
    "ws": "5.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
